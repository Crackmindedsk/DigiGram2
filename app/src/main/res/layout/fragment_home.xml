<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="Welcome to digiGram"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Complaint Management Platform"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:padding="4dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/total_complaints"
            android:layout_width="333dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:text="Total Complaints"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/work_in_progress"
            android:layout_width="331dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:text="Work in Progress"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/close_complaint"
            android:layout_width="333dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:text="Close Complaints"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:rowCount="2"
        android:columnCount="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:id="@+id/btncomplaint"
            android:background="@drawable/border"
            android:textAllCaps="true"
            android:text="New Complaint"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>
<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="fill"-->
<!--            android:background="@drawable/border"-->
<!--            android:textAllCaps="true"-->
<!--            android:id="@+id/track_status"-->
<!--            android:text="Track Complaint Status"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold"/>-->

    </GridLayout>




</LinearLayout>